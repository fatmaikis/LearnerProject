                            <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">@item.Title</h1>
                            <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="#" class="btn btn-secondary" >Tüm kurslara erişin</a></p>

                        </div>


                    </div>
                }


            </div>

        </div> <!-- /.row -->
