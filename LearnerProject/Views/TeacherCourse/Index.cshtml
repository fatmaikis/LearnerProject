@model List<LearnerProject.Models.Entities.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
    int count = 0;
}

<h3>Kurslarım</h3>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Kurs Adı</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>İşlemler</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.CourseName</td>
            <td>@(item.Description.Length>50 ? item.Description.Substring(0,50) : item.Description)</td>
            <td>@item.Price ₺ </td>
            <td>@item.Category.CategoryName</td>
            <td>
                <a href="/TeacherCourse/DeleteCourse/@item.CourseID" class="btn btn-outline-danger"> <i class="fa fa-trash"></i></a>
                <a href="/TeacherCourse/UpdateCourse/@item.CourseID" class="btn btn-outline-info"> <i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }

</table>

<br />
<a href="/TeacherCourse/AddCourse" class="btn btn-outline-success"> Yeni Kurs Ekle</a>
