@model LearnerProject.Models.Classroom
@{
    ViewBag.Title = "UpdateClassroom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Sınıf Bilgisi Güncelleme Sayfası</h3>
<br />

<form method="post">
    @Html.HiddenFor(x => x.ClassroomID)
    <label>Sınıf Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>







</form>

