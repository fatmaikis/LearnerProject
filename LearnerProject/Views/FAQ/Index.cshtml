@model List<LearnerProject.Models.Entities.FAQ>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<br />
<h3>Sık Sorulan Sayfası</h3>
<br />

<table class="table table-bordered table-hover" >

    <tr>
        <td>#</td>
        <td>Soru</td>
        <td>Cevap</td>
        <td>Resim</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
          
            <th>@count</th>
            <td>@item.Question</td>
            <td>@item.Answer</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /> </td>
            <td>
                <a href="/Faq/DeleteFAQS/@item.FAQID" class="btn btn-outline-danger"> <i class="fas fa-trash"></i> </a>
            </td>
            <td>
                <a href="/Faq/UpdateFAQS/@item.FAQID" class="btn btn-outline-info"> <i class="fas fa-edit"></i> </a>
            </td>

        </tr>
       
    }

</table>

<a href="/Faq/AddFAQS" class="btn btn-outline-success"> Yeni Soru Ekle</a>

