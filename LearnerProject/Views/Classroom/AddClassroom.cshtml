@model LearnerProject.Models.Classroom
@{
    ViewBag.Title = "AddClassroom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Sınıf Ekleme Sayfası</h3>
<br />

<form method="post">
    <label>Sınıf Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Başlık giriniz." })
    <br />
    <label>Icon</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", @placeholder = "Icon giriniz." })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama giriniz." })
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>

</form>


