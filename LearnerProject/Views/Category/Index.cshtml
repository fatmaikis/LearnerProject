@model List<LearnerProject.Models.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}

<br />
<h3>Kategori Sayfası</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger"> <i class="fa fa-trash"></i></a>
         
            </td>
            <td>
                <a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-info"> <i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }

</table>

<br />
<a href="/Category/AddCategory" class="btn btn-outline-success"> Yeni Kategori Ekle</a>


