@model List<LearnerProject.Models.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<br />
<h3>Referanslar Sayfası</h3>
<br />

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
        <th>Resim Url</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.Comment</td>
            <td>
                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger"><i class="fas fa-trash"></i> </a>
               
            </td>
            <td>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-info"><i class="fas fa-edit"></i> </a>
            </td>
        </tr>
    }

</table>

<a href="/Testimonial/AddTestimonial" class="btn btn-outline-success">Yeni Referans Ekle</a>
